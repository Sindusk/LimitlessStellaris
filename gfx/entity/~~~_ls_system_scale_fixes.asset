####################################################################################################
# Limitless Stellaris - Districts
####################################################################################################

## Asset Variables
#@ringworld_segment_size = 50 # Subtle Polish
@astroid_scale = 30 # Real Space

## Real Space - System Scale Variables
@ringworld_segment_size = 50

@ringworld_scale = 6

@ringworld_north_scale =  2700
@ringworld_south_scale = -2700
@ringworld_west_scale  =  2700
@ringworld_east_scale  = -2700

@cull_radius_1 = 3000

@cull_radius_2 = 20000

##################################################
## Ringworld
##################################################

## Ringworld Habitable Entity 01 - Clouds Entity
# Merge between Real Space: System Scale, Subtle Polish
entity = {
	name = "ringworld_habitable_entity_01_clouds_entity"
	cull_radius = @cull_radius_1 # Real Space: System Scale 500 -> @cull_radius_1
	pdxmesh = "ringworld_habitable_01_clouds_mesh"

	default_state = "idle"
	state = { name = "idle" state_time = 100 time_offset = { 0 100 } }
	state = { name = "construction" }

	meshsettings = {
		name = "polySurface34Shape"
		texture_diffuse = "clouds_medium_shadow_diffuse.dds"
		texture_normal = "nonormal.dds" # Subtle Polish
		texture_specular = "nospec.dds"
		shader = "PdxMeshCloudsAnimateUV" # Subtle Polish - custom shader added by corsairmarks - PdxMeshClouds does not display properly on attachments to an entity with shader_type = ship
	}

	meshsettings = {
		name = "polySurface35Shape"
		texture_diffuse = "clouds_medium_diffuse.dds"
		texture_normal = "clouds_medium_normal.dds"
		texture_specular = "clouds_medium_specular.dds"
		shader = "PdxMeshCloudsAnimateUV" # Subtle Polish - custom shader added by corsairmarks - PdxMeshClouds does not display properly on attachments to an entity with shader_type = ship
	}

	game_data = {
		size = @ringworld_segment_size
		uv_animation_speed = 0.004
		uv_animation_direction = { 1.0 0.0 }
	}
}

## Ringworld Habitable Entity 01 - Entity
# Merge between Real Space: System Scale, Subtle Polish
entity = {
	name = "ringworld_habitable_entity_01_entity"
	cull_radius = @cull_radius_1 # Real Space: System Scale 500 -> @cull_radius_1
	pdxmesh = "ringworld_habitable_01_mesh"

	default_state = "idle"
	state = {
		name = "idle" state_time = 100 time_offset = { 0 100 }
		start_event = { trigger_once = yes sound = { soundeffect = "ringworld_hum_idle_01" stop_on_state_change = yes } }
		start_event = { trigger_once = yes sound = { soundeffect = "ringworld_hum_idle_02" stop_on_state_change = yes } }
	}
	state = {
		name = "construction"
		start_event = {
			trigger_once = yes
			sound = {
				soundeffect = "ringworld_construction_ambient"
			}
		}
	}

	meshsettings = {
		name = "polySurface9Shape"
		texture_diffuse = "gaia_01_diffuse.dds"
		texture_normal = "tropical_03_normal.dds"
		texture_specular = "tropical_03_ringworld_spec.dds"
		shader = "PdxMeshTerra"
	}

	game_data = {
		size = @ringworld_segment_size
		shader_type = ship
	}

	attach = { root = "ringworld_habitable_entity_01_clouds_entity" }

	scale = @ringworld_scale # Real Space: System Scale
}